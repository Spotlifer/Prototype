<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond33"
    tools:context="com.neoglaxystudio_prototype.prototype.Main2Activity">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/insciptiontxt"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:textColor="#f1f1f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_centerHorizontal="true"
            android:text="Inscription" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/texts"
        android:layout_below="@+id/insciptiontxt"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f1f1f1"
            android:textSize="15dp"
            android:layout_weight="2"
            android:layout_marginLeft="15dp"
            android:text="Prenom:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="PrÃ©nom"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay2"
        android:layout_below="@+id/texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f1f1f1"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:text="Nom:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="Nom"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay3"
        android:layout_below="@+id/lay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f1f1f1"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:text="Surnom:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="Surnom"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layPick"
        android:layout_below="@+id/lay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </DatePicker>
    </LinearLayout>










</RelativeLayout>
